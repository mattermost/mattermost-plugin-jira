{
  "name": "webapp",
  "version": "0.0.1",
  "description": "This plugin serves as a starting point for writing a Mattermost plugin.",
  "main": "src/index.js",
  "scripts": {
    "run": "webpack --progress --watch",
    "build": "webpack --mode=production",
    "lint": "eslint --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern tests --ext .js --ext .jsx --ext .ts --ext .tsx . --quiet",
    "fix": "eslint --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern tests --ext .js --ext .jsx --ext .ts --ext .tsx . --quiet --fix",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test-ci": "jest --forceExit --detectOpenHandles --maxWorkers=2",
    "convert-ts": "react-js-to-ts --arrow-parens always --no-bracket-spacing --single-quote --tab-width 4 --trailing-comma all"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.9.0",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/polyfill": "7.8.7",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "7.9.0",
    "@babel/runtime": "7.9.2",
    "@types/enzyme": "3.10.5",
    "@types/jest": "25.1.4",
    "@types/node": "13.9.8",
    "@types/react": "16.9.31",
    "@types/react-dom": "16.9.6",
    "@types/react-intl": "3.0.0",
    "@types/react-redux": "7.1.7",
    "@types/react-router-dom": "5.1.3",
    "@types/react-select": "3.0.11",
    "@types/react-transition-group": "4.2.4",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "25.2.4",
    "babel-loader": "8.1.0",
    "babel-plugin-typescript-to-proptypes": "1.3.2",
    "compass-mixins": "0.12.10",
    "css-loader": "3.4.2",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "enzyme-to-json": "3.4.4",
    "eslint": "6.8.0",
    "eslint-import-resolver-webpack": "0.12.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-react": "7.19.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.2.4",
    "jest-canvas-mock": "2.2.0",
    "jest-junit": "10.0.0",
    "node-sass": "4.13.1",
    "react-js-to-ts": "1.4.0",
    "sass-loader": "8.0.2",
    "style-loader": "1.1.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11"
  },
  "dependencies": {
    "core-js": "3.6.4",
    "debounce-promise": "3.1.2",
    "mattermost-redux": "github:mattermost/mattermost-redux#40e5bd5a18daa919c62a06b360aa27f2e6ed3e13",
    "mattermost-webapp": "github:mattermost/mattermost-webapp#23f5f93d9f12a7e2b5623e5cee6814366abd9a0f",
    "react": "16.13.1",
    "react-bootstrap": "1.0.0",
    "react-dom": "16.13.1",
    "react-redux": "7.2.0",
    "react-select": "3.1.0",
    "react-window": "1.8.5",
    "redux": "4.0.5",
    "reselect": "4.0.0",
    "typescript": "3.8.3"
  },
  "jest": {
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/non_npm_dependencies/"
    ],
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
      "^.+\\.(css|less|scss)$": "identity-obj-proxy",
      "^.*i18n.*\\.(json)$": "<rootDir>/tests/i18n_mock.json",
      "^bundle-loader\\?lazy\\!(.*)$": "$1"
    },
    "moduleDirectories": [
      "",
      "node_modules",
      "non_npm_dependencies"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-router|mattermost-webapp)"
    ],
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testURL": "http://localhost:8065"
  },
  "jest-junit": {
    "output": "build/test-results.xml"
  }
}
