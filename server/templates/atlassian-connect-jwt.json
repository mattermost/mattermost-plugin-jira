{{define "config"}}{
    "key": "mattermost-jira-plugin",
    "name": "Mattermost JIRA Plugin",
    "description": "Add-on for the Mattermost JIRA plugin.",
    "vendor": {
      "name": "Mattermost",
      "url": "https://github.com/mattermost"
    },
    "baseUrl": "{{ .BaseURL }}",
    "links": {
      "self": "{{ .BaseURL }}/atlassian-connect.json?auth=jwt",
      "homepage": "{{ .BaseURL }}/atlassian-connect.json?auth=jwt"
    },
    "authentication": {
      "type": "jwt"
    },
    "lifecycle": {
      "installed": "/installed",
      "uninstalled": "/uninstalled"
    },
    "scopes": [
      "READ",
      "WRITE",
      "ACT_AS_USER"
    ],
    "modules": {
      "webhooks": [
        {
          "event": "jira:issue_created",
          "url": "/issue_event"
        },
        {
          "event": "jira:issue_deleted",
          "url": "/issue_event"
        },
        {
          "event": "jira:issue_updated",
          "url": "/issue_event"
        }
      ]
    }
  }
{{ end }}
