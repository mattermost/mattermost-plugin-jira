{{define "config"}}
{
	"key": "mattermost-plugin",
	"name": "Mattermost Plugin ({{ .ExternalURL }})",
	"description": "Add-on for the Mattermost JIRA plugin.",
	"vendor": {
		"name": "Mattermost",
		"url": "https://github.com/mattermost"
	},
	"baseUrl": "{{ .BaseURL }}",
	"links": {
		"self": "{{ .BaseURL }}/atlassian-connect.json",
		"homepage": "https://www.mattermost.com"
	},
	"authentication": {
		"type": "jwt"
	},
	"lifecycle": {
		"installed": "/installed",
		"uninstalled": "/uninstalled"
	},
	"scopes": [ "READ", "WRITE", "ACT_AS_USER" ],
	"modules": {
		"generalPages": [
			{
				"url": "/user-config",
				"name": {
					"value": "User mapping and configuration page"
				},
				"key": "user-config",
				"location": "none"
			}
		]
	}
}
{{ end }}
